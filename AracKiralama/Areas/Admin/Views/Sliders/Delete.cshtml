@model Slider

@{
    ViewData["Title"] = "Slide Sil";
}

<h1>Slide Sil</h1>

<h3>Silmek istiyor musunuz?</h3>
<div>
    <h4>Slider Resmi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Baslık)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Baslık)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acıklama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acıklama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resim)
        </dt>
        <dd class="col-sm-10">
            <img src="/Img/Slider/@Model.Resim" alt="" height="75" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>